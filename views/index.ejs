<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>DUDAS</title>
  <link rel="icon" href="logo-removebg-preview.png" type="image/x-png" sizes="16x16">

  <style>
    .formulario-wrapper {
      width: 60%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .form-container {
      background: white;
      padding: 2.5em;
      box-shadow: 0 6px 12px;
      width: 1000px;
      min-width: 600px;
      min-height: 800px;
      align-items: center;
      border-radius: 35px;
      background-color: rgba(0, 0, 0,0.4);
    }
    .container-fondo {
      width: 100%;
      background-image: url('unam.jpg');
      background-size: cover;
      background-position: center;        
      border-top-right-radius: 30px;
      border-bottom-right-radius: 30px;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      text-align: center;
    }
  </style>
</head>

<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm bg-body-tertiary m-0 border-0">
    <div class="container-fluid" style="background-color: rgb(190, 128, 241);">
      <a class="navbar-brand" href="#" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;color: white;font-size: 150%;">ChatBot RH - FES Aragón</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" href="https://www.unam.mx/"><img src="logo (1).png" style="width: 180px;height: 85px"></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="https://plataformaeducativa.aragon.unam.mx/"><img src="cuentas-aragon.png" style="width: 140px;height: 85px;"></a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- CONTENIDO PRINCIPAL -->
  <div class="container-fondo" style="color: white">
    <div class="d-flex justify-content-center align-items-center mt-4" style="gap: 2rem;">
      <div id="chatbox" class="form-container form-container ms-auto">      
        <h3>Dudas y Preguntas Frecuentes</h3>
        <div id="conversacion"></div><br>
        <form id="formulario" style="margin: 10px; border: 5px solid black; border-radius: 5px;">
          <label for="pregunta">Selecciona una pregunta:</label>
          <select id="pregunta" required>
            <option value="">-- Elige una opción --</option>
          </div>
          <option value="horario de atención">¿Cuál es el horario de atención?</option>
        <option value="documentos para constancia">¿Qué documentos necesito para solicitar una constancia?</option>
        <option value="ubicación de la oficina">¿Dónde está la oficina de Recursos Humanos?</option>
        <option value="contacto">¿Cuál es el contacto de Recursos Humanos?</option>
      </select>
          <button type="submit" style="border-radius: 60px;">Consultar</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Paso 5 - Cargar preguntas desde la base de datos
    window.addEventListener("DOMContentLoaded", async () => {
      const res = await fetch("/api/preguntas");
      const preguntas = await res.json();

      const select = document.getElementById("pregunta");
      select.innerHTML = '<option value="">-- Elige una opción --</option>';

      preguntas.forEach(p => {
        const option = document.createElement("option");
        option.value = p.pregunta;
        option.textContent = p.pregunta;
        select.appendChild(option);
      });
    });

    // Enviar pregunta al backend
    document.getElementById("formulario").addEventListener("submit", async (e) => {
      e.preventDefault();
      const pregunta = document.getElementById("pregunta").value;
      const res = await fetch("/api/responder", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ pregunta })
      });
      const data = await res.json();
    document.getElementById("conversacion").innerHTML = `<p><strong>Respuesta:</strong> ${data.respuesta}</p>`;

    });
  </script>
</body>
</html>
